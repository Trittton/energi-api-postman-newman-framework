{
  "info": {
    "name": "Energi Data Service API Tests",
    "description": "Production-grade API testing framework for Danish Energi Data Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (!pm.iterationData.has('start')) {",
          "    pm.environment.set('startISO', '2024-12-01');",
          "    pm.environment.set('endISO', '2024-12-02');",
          "    console.log('[DateRange] Start: ' + pm.environment.get('startISO') + ', End: ' + pm.environment.get('endISO'));",
          "}",
          "console.log('[Collection Pre-request] baseUrl: ' + pm.environment.get('baseUrl'));"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "00_PreRequest",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}{{datasetPath}}/Elspotprices?limit=1"
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                "pm.test('Content-Type is application/json', () => pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json'));",
                "pm.test('Response time < 5000ms', () => pm.expect(pm.response.responseTime).to.be.below(5000));",
                "pm.test('API is available', () => pm.expect(pm.response.code).to.equal(200));",
                "console.log('[Health Check] API is healthy');"
              ]
            }
          }]
        }
      ]
    },
    {
      "name": "01_Elspotprices",
      "item": [
        {
          "name": "TC-01: Get by Date Range",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}{{datasetPath}}/Elspotprices?start={{startISO}}&end={{endISO}}&limit={{defaultLimit}}"
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {"exec": ["console.log('[TC-01] Testing date range: ' + pm.environment.get('startISO') + ' to ' + pm.environment.get('endISO'));"]}
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                  "pm.test('Content-Type is application/json', () => pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json'));",
                  "pm.test('Response time < 5000ms', () => pm.expect(pm.response.responseTime).to.be.below(5000));",
                  "const jsonData = pm.response.json();",
                  "pm.test('Response contains required root fields', () => {",
                  "    pm.expect(jsonData).to.have.property('total');",
                  "    pm.expect(jsonData).to.have.property('limit');",
                  "    pm.expect(jsonData).to.have.property('dataset');",
                  "    pm.expect(jsonData).to.have.property('records');",
                  "});",
                  "pm.test('Dataset is Elspotprices', () => pm.expect(jsonData.dataset).to.equal('Elspotprices'));",
                  "pm.test('Records is array and not empty', () => pm.expect(jsonData.records).to.be.an('array').that.is.not.empty);",
                  "pm.test('Record count respects limit', () => pm.expect(jsonData.records.length).to.be.at.most(parseInt(pm.environment.get('defaultLimit'))));",
                  "pm.test('Each record has required fields', () => {",
                  "    jsonData.records.forEach((record, index) => {",
                  "        pm.expect(record, 'Record ' + index).to.have.all.keys('HourUTC', 'HourDK', 'PriceArea', 'SpotPriceDKK', 'SpotPriceEUR');",
                  "    });",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "02_CO2Emis",
      "item": [
        {
          "name": "Get Recent Emissions",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}{{datasetPath}}/CO2Emis?start={{startISO}}&end={{endISO}}&limit=100"
